<% layout("/layouts/boilerplate") %><br>
<div class="row">
    <div class="col-9 offset-2">
    <h3>Edit Section</h3><br>
    <form class="needs-validation" method="POST" action="/listings/<%= listing._id%>?_method=PUT" enctype="multipart/form-data" novalidate>

        <div class="mb-3">
         <label for="title" class="form-label">Title</label>
         <input name="listing[title]" class="form-control" type="text" value="<%= listing.title %>" required>
         <div class="invalid-feedback">Please Enter Title</div>
         </div>

        <div class="mb-3">
         <label for="description" class="form-label">Description</label>
         <textarea name="listing[description]" class="form-control" type="text" required><%= listing.description %></textarea>
         <div class="invalid-feedback">Please Enter Description</div>
        </div>

        <div class="mb-3">
         <label for="image" class="form-label">Upload New Image</label>
         <input name="listing[image]" class="form-control" type="file">
        </div>

        <div class="mb-3">
         <label for="price" class="form-label">Price</label>
         <input name="listing[price]" class="form-control" type="number" value="<%= listing.price %>" required>
         <div class="invalid-feedback">Please Enter Price</div>
        </div>

        <div class="row">
        <div class="mb-3 col-md-8">
         <label for="location" class="form-label">Location</label>
         <input name="listing[location]" class="form-control" type="text" value="<%= listing.location %>" required>
         <div class="invalid-feedback">Please Enter Location</div>
        </div>

        <div class="mb-3 col-md-4">
         <label for="country" class="form-label">Country</label>
         <input name="listing[country]" class="form-control" type="text" value="<%= listing.country %>" required>
         <div class="invalid-feedback">Please Enter Country</div>
        </div>
        </div><br>
  
        <button class="btn btn-dark">Edit</button><br><br>
    </form>
  </div>
</div>